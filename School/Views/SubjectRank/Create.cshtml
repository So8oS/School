@model School.ViewModel.SubjectRankViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SubjectRankViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
               <select asp-for="SubjectId" 
                asp-items="@(new SelectList(Model.Subjects , "Id" ,"Name"))"  class="form-control" ></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RankId" class="control-label"></label>
               <select asp-for="RankId" 
                asp-items="@(new SelectList(Model.Ranks , "Id" ,"Name"))"  class="form-control" ></select>
                <span asp-validation-for="RankId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
